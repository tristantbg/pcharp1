#medias
	opacity 0
	border-bottom 1px solid $secondary
	.media
		box-shadow -1px -1px 0 0 $secondary, 1px 1px 0 0 $secondary, -1px 1px 0 0 $secondary, 1px -1px 0 0 $secondary
		overflow hidden
		.inner
			height 100%
			background $primary
		img
			display block
		.bullet
			position absolute
			width 13px
			height 13px
			bottom 0.7rem
			left 0.7rem
			background $accent
			border-radius 100%
			opacity 0
			z-index 2
			// transform scale(0.9)
		&:hover
			.bullet
				opacity 1
				// transition transform 200ms ease-out
				// transform scale(1)
