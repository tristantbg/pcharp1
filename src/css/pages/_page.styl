#page-panel
	position fixed
	// height 'calc(100% - %s)' % $padding
	height 100%
	width 49rem
	left (1rem + 2*$padding)
	top 0
	background $secondary
	color $primary
	padding $padding
	text()
	overflow scroll
	p
		max-width 25.85em
	.entry
		&:not(:last-child)
			margin-bottom 1em
		.entry-title
			padding-left 1.25em