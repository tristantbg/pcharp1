[page-type=project]
	#lightbox
		hideselect()
		display none
		width 'calc(100% - %s)' % (1rem + 2*$padding)
		height 'calc(100vh - %s)' % $padding
		padding-bottom (1rem + 2*$padding)
		position fixed
		top $padding
		left (1rem + 2*$padding)
		background $primary
		z-index 95
		.project-description
			position absolute
			top 0
			left 0
			width $descriptionWidth
			height 100%
			border-right 1px solid
			background $primary
		.flickity-viewport
			width 100%
		.flickity-slider
			transform none !important
		.slide
			width 100%
			left 0 !important
			visibility hidden
			+above($sm + 1)
				height 100%
			.content
				width 100%
				padding-left $descriptionWidth
				+above($sm + 1)
					height 100%
			img, video
				width 100%
				border-right 1px solid
				+above($sm + 1)
					width auto
					height 100%
			.content.video
				width 100%
				.plyr--ready
					width 100%
					height 100%
				video
					width 100%
					+above($sm + 1)
						width auto
						height 100%
					// object-position top left
					// object-fit contain
			&.format-png, &.format-gif
				background alpha($secondary, 0.05)
				img
					mix-blend-mode darken
					object-position center
			&.is-selected
				visibility visible
				z-index 1
		.flickity-prev-next-button
			cursor none !important
			top 0
			height 100%
			width 50%
			margin-top 0
			background transparent
			padding 0
			transform none
			border none
			border-radius 0
			z-index 1
			overflow hidden
			+below($md)
				display none
			svg
				opacity 0
				align()
				width 2rem
				height 1.4rem
			&.previous
				left 0
			&.next
				right 0
			&[disabled]
				+above($md)
					opacity 1
					display block
					pointer-events auto
			&:active
				opacity 1
			&:focus
				box-shadow none
				outline none
			&:not(:hover)
				svg
					display none

body.lightbox-on
	overflow hidden
	#lightbox
		display block