nav#menu
	position fixed
	top 0
	left 0
	width 100%
	background $primary
	z-index 99
	box-shadow 0 1px $secondary
	padding 0 0 0 (1rem + $padding*3)
	& > a
		display block
		float left
		padding $padding 0
		&:not(:last-child)
			margin-right 2.3rem
		&:hover
			color $accent
	&.sticky
		position fixed
		top 0
		left 0
		transition transform 400ms ease
		&::after
			content ''
			position absolute
			height ($padding*2)
			width 100%
			bottom (-2*$padding)
			left 0
	&.sticky--pinned
		&::after
			visibility hidden
	&.sticky--unpinned:not(:hover), &.sticky--top:not(:hover), &.sticky--force-unpinned:not(:hover):not(.sticky--top)
		// transform 'translateY(calc(-100% + %s)) translateZ(0)' % $padding
		transform 'translateY(calc(-100% - %s)) translateZ(0)' % (1px)
		

