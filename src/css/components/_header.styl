body.sticky--menu, #page-panel.visible
	.text-content, [event-target=close-panel]
		transition transform 400ms ease

+above($md + 1)
	body.sticky--menu
		#page-panel.visible
			.text-content, [event-target=close-panel]
				transform translateY(3rem) translateZ(0)

header
	#site-title
		position fixed
		top 0
		left 0
		width 100%
		background $primary
		z-index 101
		white-space nowrap
		box-shadow 0 1px 0 $secondary
		& > *
			padding $padding
			&:not(.hidden)
				display block
		&.active
			background $accent
			color $primary
		+above($md + 1)
			z-index 102
			box-shadow 1px 0 $secondary
			height 100%
			width (1rem + $padding*2)
			& > *
				position absolute
				top 0
				right (1rem + $padding*2)
				transform-origin top right
				transform rotate(-90deg)
				white-space nowrap
				padding $padding
			&:hover
				background $accent
				color $primary



