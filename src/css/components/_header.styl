header
	#site-title
		position fixed
		top 0
		left 0
		height 100%
		width (1rem + $padding*2)
		background $primary
		box-shadow 1px 0 $secondary
		z-index 100
		& > *
			position absolute
			top 0
			right (1rem + $padding*2)
			transform-origin top right
			transform rotate(-90deg)
			white-space nowrap
			padding $padding
		&:hover
			background $accent
			color $primary



