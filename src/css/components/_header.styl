nav#menu
	position fixed
	top 0
	left 0
	width 100%
	background $primary
	z-index 99
	box-shadow 0 1px $secondary
	padding 0 0 0 (1rem + $padding*3)
	+below($md)
		top 3rem
		padding $padding $padding 0
		z-index 100
	#homepage
		+above($md + 1)
			display none
	form
		label
			float left
			cursor pointer
		input
			padding 0
			margin 0
			font-family inherit
			letter-spacing inherit
			border 0
			caret-color $accent
			font-size inherit
			width 0
			opacity 0
			color $accent
			&:focus
				width auto
				opacity 1
				& + label
					display none
	& > a, & > form
		display block
		float left
		padding $padding 0
		+below($md)
			padding-top 0
		&:not(:last-child)
			margin-right 2.3rem
			+below($md)
				margin-right 1.5rem
		+above($md + 1)
			&:hover
				color $accent
	&.sticky
		position fixed
		transition transform 400ms ease
		&::after
			content ''
			position absolute
			height ($padding*2)
			width 100%
			bottom (-2*$padding)
			left 0
	&.sticky--pinned:not(.sticky--top)
		&::after
			visibility hidden
	+below($md)
		&.sticky--unpinned, &.sticky--top
			&:not(.sticky--force-pinned)
				// transform 'translateY(calc(-100% + %s)) translateZ(0)' % $padding
				transform 'translateY(calc(-100% - %s)) translateZ(0)' % (1px)
	+above($md + 1)
		&.sticky--unpinned:not(:hover), &.sticky--top:not(:hover)
			&:not(.sticky--force-pinned)
				// transform 'translateY(calc(-100% + %s)) translateZ(0)' % $padding
				transform 'translateY(calc(-100% - %s)) translateZ(0)' % (1px)


